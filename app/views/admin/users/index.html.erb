<h1>Users</h1>

<table class="table">
  <tr>
    <th>ONID</th>
    <th>Name</th>
    <th>Role</th>
    <th></th>
  </tr>
 <% @roles.each do |role| %>
  <tr>
    <td><%= role.onid %></td>
    <td><%= role.onid %> (TBA)</td>
    <td><%= role.role %></td>
    <td>
      <%= form_for role, :url => promote_admin_user_path(role), :method => 'post' do |f| %>
        <%= f.submit "Promote", :class => 'btn' %>
      <% end %>
      <%= form_for role, :url => demote_admin_user_path(role), :method => 'post' do |f| %>
        <%= f.submit "Demote", :class => 'btn' %>
      <% end %>
    </td>
  </tr>
 <% end %>
</table>
